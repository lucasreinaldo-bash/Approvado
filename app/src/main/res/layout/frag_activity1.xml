<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="4dp"

        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="309dp">


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="224dp"
                android:layout_height="107dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/logoconcurso"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/aclonica"
                android:padding="15sp"
                android:text="Língua Portuguesa"
                android:textAlignment="center"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/checkBox1"
                android:padding="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Interpretação de Textos: Leitura e interpretação de textos literários e não literários -– descrição, narração, dissertação, etc.
" />

            <CheckBox
                android:id="@+id/checkBox2"
                android:padding="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fonética: Encontros vocálicos – ditongo, tritongo, hiato. Encontros consonantais. Dígrafos. " />

            <CheckBox
                android:id="@+id/checkBox3"
                android:padding="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Classificação das palavras quanto ao número de sílabas - monossílabas, dissílabas, trissílabas, polissílabas. Divisão silábica. Sílaba tônica. Classificação das palavras quanto ao acento tônico - oxítonas, paroxítonas, proparoxítonas. " />

            <CheckBox
                android:id="@+id/checkBox4"
                android:padding="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ortoépia. Prosódia" />

            <CheckBox
                android:id="@+id/checkBox5"
                android:padding="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ortografia. Acentuação Gráfica. Crase, uso do acento indicativo de crase.
" />

            <CheckBox
                android:id="@+id/checkBox6"
                android:padding="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Notações léxicas. Abreviatura, siglas e símbolos. " />

            <CheckBox
                android:id="@+id/checkBox7"
                android:padding="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Morfologia: Estrutura das palavras – raiz, radical, palavras primitivas e derivadas, palavras simples e compostas. Formação das palavras – derivação, composição, redução, hibridismos. Sufixos. Prefixos. Radicais. Classificação e flexão das palavras - substantivo, artigo, adjetivo, numeral, pronome, verbo, advérbio, preposição, conjunção, interjeição, etc. " />

            <CheckBox
                android:id="@+id/checkBox8"
                android:padding="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Uso morfossintático dos pronomes. Semântica: Significação das palavras – sinônimos e antônimos. Análise sintática - frase, oração e período. Sintaxe de regência: nominal e verbal
" />

            <CheckBox
                android:id="@+id/checkBox9"
                android:padding="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Termos Essenciais da Oração - sujeito, predicado. Termos integrantes e acessórios da oração - objeto direto, objeto indireto, complemento nominal, agente da passiva, adjunto adnominal, adjunto adverbial, aposto, vocativo, etc.
" />

            <CheckBox
                android:id="@+id/checkBox10"
                android:padding="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Classificação das orações: principal, coordenadas, subordinadas, reduzidas, etc.
" />
            <CheckBox
                android:id="@+id/checkBox11"
                android:padding="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sinais de Pontuação – emprego da vírgula, ponto-e-vírgula, dois-pontos, ponto final, ponto de interrogação, ponto de exclamação, reticências, parênteses, travessão, aspas, colchetes, asterisco, parágrafo." />
            <CheckBox
                android:id="@+id/checkBox12"
                android:padding="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sintaxe de concordância – nominal e verbal.
" />
            <CheckBox
                android:id="@+id/checkBox13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Regência nominal e verbal. Sintaxe de colocação. Modos e tempos verbais, infinitivo, gerúndio e particípio." />


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/logoconcurso"
                />


        </LinearLayout>


    </ScrollView>



</android.support.constraint.ConstraintLayout>