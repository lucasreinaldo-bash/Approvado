<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    tools:context=".SimuladoAluno.Iniciar">


    <ImageView
        android:id="@+id/quizacademia"
        android:layout_width="403dp"
        android:layout_height="229dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="63dp"
        android:src="@drawable/logoquiz" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="281dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/info_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="8dp"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/edtUser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="usuario"
                    android:textColor="@color/colorPrimary"
                    android:textSize="24dp"
                    app:met_baseColor="@color/colorPrimary"
                    app:met_floatingLabel="highlight"
                    app:met_primaryColor="@color/colorPrimary"
                    app:met_singleLineEllipsis="true"

                    />

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/edtPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="senha"
                    android:inputType="textPassword"
                    android:textColor="@color/colorPrimary"
                    android:textSize="24dp"
                    app:met_baseColor="@color/colorPrimary"
                    app:met_floatingLabel="highlight"
                    app:met_primaryColor="@color/colorPrimary"
                    app:met_singleLineEllipsis="true"></com.rengwuxian.materialedittext.MaterialEditText>


                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:orientation="horizontal"
                       android:gravity="center"
                       >
                       <Button
                           android:id="@+id/btn_sign_in"
                           android:layout_width="112dp"
                           android:layout_height="wrap_content"
                           android:layout_alignParentBottom="true"
                           android:layout_alignParentStart="true"
                           android:layout_marginStart="16dp"
                           android:background="@android:drawable/editbox_background_normal"
                           android:elevation="10dp"
                           android:text="Acesso"
                           android:textAllCaps="false" />

                       <Button
                           android:id="@+id/btn_sign_up"
                           android:layout_width="102dp"
                           android:layout_height="wrap_content"
                           android:layout_alignParentEnd="true"
                           android:layout_alignTop="@+id/btn_sign_in"
                           android:layout_marginEnd="23dp"
                           android:background="@android:drawable/editbox_background_normal"
                           android:elevation="10dp"
                           android:text="Cadastro"
                           android:textAllCaps="false" />
                   </LinearLayout>
                    />


            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>





    </RelativeLayout>

