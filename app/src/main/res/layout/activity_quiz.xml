<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Quiz.QuizActivity"
    android:background="@android:color/background_light">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:fillViewport="false"
        android:id="@+id/scrollView2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A vereadora do Rio de Janeiro Marielle Franco, assassinada em março deste ano, tinha projetos de lei que visavam proteger:"
            android:textSize="20sp"
            android:padding="4dp"
            android:fontFamily="@font/roboto_thin"
            android:layout_marginBottom="10dp"
            android:id="@+id/question"
            android:layout_weight="0.97"
            android:textColor="#fdbc4a"
            android:textStyle="bold" />
    </ScrollView>


    <TextView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/score"
        android:text="0/0"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
        android:layout_marginLeft="240dp"
        android:layout_gravity="right"
        android:layout_weight="0.11"
        android:textColor="@color/abc_hint_foreground_material_dark"
        android:layout_alignBottom="@+id/scrollView2"
        android:layout_alignEnd="@+id/scrollView2"
        android:layout_marginTop="5dp" />

    <Button
        android:id="@+id/choice1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="181dp"
        android:background="@drawable/botao_atualidades"
        android:onClick="onClick"
        android:padding="8dp"
        android:text="Does"
        android:textColor="@android:color/black"
        android:textColorHighlight="#060505"
        android:textColorHint="#0a0909"
        android:textSize="10dp"
         />

    <Button
        android:id="@+id/choice4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="95dp"
        android:background="@drawable/botao_atualidades"
        android:onClick="onClick"
        android:padding="8dp"
        android:text="Does"
        android:textColor="@android:color/black"
        android:textColorHighlight="#060505"
        android:textColorHint="#0a0909"
        android:textSize="10dp" />

    <Button
        android:id="@+id/choice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="147dp"
        android:background="@drawable/botao_atualidades"
        android:onClick="onClick"
        android:padding="8dp"
        android:text="Does"
        android:textColor="@android:color/black"
        android:textColorHighlight="#060505"
        android:textColorHint="#0a0909"
        android:textSize="10dp" />

    <Button
        android:id="@+id/choice2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/choice1"
        android:layout_below="@+id/choice1"
        android:layout_marginTop="5dp"
        android:background="@drawable/botao_atualidades"
        android:onClick="onClick"
        android:padding="8dp"
        android:text="Do"
        android:textColor="@android:color/black"
        android:textColorHighlight="#060505"
        android:textColorHint="#0a0909"
        android:textSize="10dp"
        />

    <Button
        android:id="@+id/choice3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/choice2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:background="@drawable/botao_atualidades"
        android:onClick="onClick"
        android:padding="8dp"
        android:text="Are"
        android:textColor="@android:color/black"
        android:textColorHighlight="@color/background_floating_material_light"
        android:textColorHint="#0a0909"
        android:textSize="10dp"
     />

    <Button
        android:id="@+id/btn_proximo"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/logo"
        android:layout_toEndOf="@+id/logo"
        android:background="@android:drawable/dialog_holo_dark_frame"
        android:padding="14sp"
        android:text="Próximo"
        android:textColor="#ffff"
        android:textSize="10sp" />

    <Button
        android:id="@+id/btn_desistir"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@android:drawable/dialog_holo_dark_frame"
        android:padding="14sp"
        android:text="Desisto
"
        android:textColor="#ffff"
        android:textSize="10sp" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="155dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logoconcurso" />

</RelativeLayout>
