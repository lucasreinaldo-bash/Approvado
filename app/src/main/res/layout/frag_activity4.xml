<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="309dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="224dp"
                android:layout_height="107dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/logoconcurso"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/aclonica"
                android:padding="15sp"
                android:text="Conhecimentos Específicos"
                android:textAlignment="center"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/checkBox1"
                android:padding="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Noções de primeiros socorros."

                />

            <CheckBox
                android:id="@+id/checkBox2"
                android:padding="10sp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="Noções de Direito Constitucional: dos princípios fundamentais (artigos 1º ao 4º). " />

            <CheckBox
                android:id="@+id/checkBox3"
                android:padding="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dos direitos e garantias fundamentais (artigos 5º a 11º)" />

            <CheckBox
                android:id="@+id/checkBox4"
                android:padding="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Da segurança pública (art. 144 – os artigos em referência são da Constituição Federal de 1988)."
                />

            <CheckBox
                android:id="@+id/checkBox5"
                android:padding="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Noções de Direito Penal: dos crimes contra a pessoa e contra o patrimônio (artigos 121 a 183). "
                />

            <CheckBox
                android:id="@+id/checkBox6"
                android:padding="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dos crimes contra a fé pública. Dos crimes contra a Administração Pública (artigos 312 a 337-A – os artigos em referência são do Código Penal)." />

            <CheckBox
                android:id="@+id/checkBox7"
                android:padding="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dos crimes praticados por funcionários públicos contra a Administração em geral. Funcionário público: conceituação." />

            <CheckBox
                android:id="@+id/checkBox8"
                android:padding="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Legislação de trânsito. "
                />

            <CheckBox
                android:id="@+id/checkBox9"
                android:padding="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Código de Trânsito Brasileiro. Sistema Nacional de Trânsito: composição. Crimes de trânsito. Infrações e penalidades." />

            <CheckBox
                android:id="@+id/checkBox10"
                android:padding="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sinalização de trânsito, segurança e velocidade." />
            <CheckBox
                android:id="@+id/checkBox11"
                android:padding="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Condutores de veículos – deveres e proibições" />
            <CheckBox
                android:id="@+id/checkBox12"
                android:padding="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Leis de gerais das Guardas Municipais: Lei nº 13.022/14; Estatuto do Desarmamento nº 10.826/03; nº 5.123/04 e Portaria DPF nº 365/06." />


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/logoconcurso"
                />


        </LinearLayout>


    </ScrollView>



</android.support.constraint.ConstraintLayout>