<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SimuladoAluno.playing"
    android:background="@android:color/white"





    >

    <ImageView
        android:layout_width="46dp"
        android:layout_height="33dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logoconcurso" />

    <ImageView
        android:id="@+id/question_image"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_width="300dp"
        android:layout_height="200dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="171dp"
        android:layout_alignParentTop="false"
        android:layout_marginEnd="4dp"
        android:gravity="center"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/question_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/aldrich"
                android:gravity="center"
                android:text='Observe a frase: "Did hundreds of Japanese KIDS suffer a TV induced epileptic attack last week". Indique a alternativa em que todas as palavras tÃªm a mesma forma de plural de KIDS:'
                android:textColor="@android:color/background_dark"
                android:textSize="16sp"
                android:visibility="visible"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="223dp" />
        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:layout_margin="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        >
        <LinearLayout
            android:id="@+id/group"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txtScore"
                    android:textColor="@android:color/holo_blue_bright"
                    android:gravity="center_horizontal"
                    android:text="0"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/txtTotalQuestion"
                    android:textColor="@android:color/holo_blue_dark"
                    android:gravity="center_horizontal"
                    android:text=""
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <ProgressBar
                android:id="@+id/progressBar1"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:max="5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <Button

                android:background="@drawable/botao_atualidades2"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:text="Answer A"
                android:id="@+id/btnAnswerA"
                android:layout_margin="8dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <Button

                android:background="@drawable/botao_atualidades2"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:text="Answer B"
                android:id="@+id/btnAnswerB"
                android:layout_margin="8dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <Button

                android:background="@drawable/botao_atualidades2"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:text="Answer C"
                android:id="@+id/btnAnswerC"
                android:layout_margin="8dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <Button

                android:background="@drawable/botao_atualidades2"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:text="Answer D"
                android:id="@+id/btnAnswerD"
                android:layout_margin="8dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>