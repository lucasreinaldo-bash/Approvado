<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="309dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="224dp"
                android:layout_height="107dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/logoconcurso"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/aclonica"
                android:padding="15sp"
                android:text="Noções de Informática"
                android:textAlignment="center"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/checkBox1"
                android:padding="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Operação com arquivos e pastas em ambiente Windows 10"

                />

            <CheckBox
                android:id="@+id/checkBox2"
                android:padding="10sp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="Utilização do pacote MS-Office versão 2016" />

            <CheckBox
                android:id="@+id/checkBox3"
                android:padding="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Conceito de Internet" />

            <CheckBox
                android:id="@+id/checkBox4"
                android:padding="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Modos de utilização de tecnologias,ferramentas, aplicativos e procedimentos associados à Internet; "
                />

            <CheckBox
                android:id="@+id/checkBox5"
                android:padding="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Navegadores, correio eletrônico, busca e pesquisa"
                />

            <CheckBox
                android:id="@+id/checkBox6"
                android:padding="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Conceitos e modos de utilização de tecnologias, ferramentas, aplicativos e procedimentos de informática; hardware e software" />




            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/logoconcurso"
                />


        </LinearLayout>


    </ScrollView>



</android.support.constraint.ConstraintLayout>